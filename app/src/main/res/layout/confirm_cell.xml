<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <TextView
        android:id="@+id/event_type_confirm"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="left|center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/event_name_confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_name_confirm"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="left|center"
        android:textColor="@color/colorDarkFont"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/event_type_confirm"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>